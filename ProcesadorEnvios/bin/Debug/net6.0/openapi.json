                "$ref": "#/components/schemas/Envio"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/Envio"
              }
            },
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/Envio"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Operacion realizada con exito",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Envio"
                }
              },
              "application/xml": {
                "schema": {
